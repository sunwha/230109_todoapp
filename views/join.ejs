      function Validate() {
        const fields = ["new_id", "new_pw", "new_pw_re"];

        let fieldname;
        for(let i=0; i < fields.length; i++){
          fieldname = fields[i];
          if(document.forms['join'][fieldname].value == ""){
            alert("empty " + fieldname);
            return false;
          }
        }

        // const password = document.querySelector('#todoNewPw').value;
        // const passwordRe = document.querySelector('#todoNewPwRe').value;
        // if(password != passwordRe){
        //   alert('Passwords do not match.');
        //   return false;
        // }
        return true;
      }

      const password = document.querySelector('#todoNewPw')
      const passwordRe = document.querySelector('#todoNewPwRe');
      const joinbtn = document.querySelector("#joinbtn");

      passwordRe.addEventListener('input', function(e){
        let txt = e.target.value;
        if(password.value != txt){
          passwordRe.nextSibling.style.display = 'block';
          joinbtn.disabled = true;
        } else {
          document.querySelector(".cap").style.display = 'none';
          joinbtn.disabled = false;
        }
      })

    </script>

