              <button type="button" class="btn btn-outline-secondary ml-1" id="checkidbtn">CHECK</button>
            </div>
          </div>
          <div class="col-12 mt-3">
            <label for="todoNewPw" class="form-label">PASSWORD</label>
            <input type="password" class="form-control" id="todoNewPw" name="new_pw">
          </div>
          <div class="col-12 mt-3">
            <label for="todoNewPwRe" class="form-label">RE PASSWORD</label>
            <input type="password" class="form-control" id="todoNewPwRe" name="new_pw_re"><p class="cap" style="display:none">Passwords do not match.</p>
          </div>
          <div class="col-12 mt-3">
            <button type="submit" class="btn btn-outline-secondary" id="joinbtn" onclick="return Validate()">JOIN</button>
          </div>
        </div>
      </form>
    </div>
