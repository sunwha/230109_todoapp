  <body>

    <%- include('nav.ejs') %>

    <div class="container mt-5">
      <h2>회원가입</h2>
      <form action="/join" method="POST" name="join">
        <div class="row g-3 mt-5">
          <div class="col-12">
            <label for="todoNewId" class="form-label">ID</label>
            <div class="col-12 d-flex p-0">
